<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.opencv.cultoftheunicorn.marvel.cultoftheunicorn.marvel.Training">


        <hackathon.TeamTayo.Tutorial3View
            android:id="@+id/tutorial3_activity_java_surface_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@id/tutorial3_activity_java_surface_view"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/tutorial3_activity_java_surface_view"
            android:layout_toRightOf="@id/tutorial3_activity_java_surface_view"
            android:contentDescription="@string/image_preview"
            android:src="@drawable/user_image" />

        <ToggleButton
            android:id="@+id/capture"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imagePreview"
            android:layout_alignRight="@+id/imagePreview"
            android:layout_alignBottom="@+id/tutorial3_activity_java_surface_view"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:textAllCaps="false"
            android:textOff="@string/capture"
            android:textOn="@string/capturing" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnKembali"
            android:layout_alignLeft="@+id/capture"
            android:layout_alignRight="@+id/capture"
            android:text="Back"
            android:layout_below="@+id/capture"
            android:layout_marginBottom="10dp"

            />

    </RelativeLayout>

</ScrollView>

